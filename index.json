{
  "connector": {
    "name": "jsdom",
    "options": {
      "ignoreHTTPSErrors": true,
      "waitFor": 5000
    }
  },
  "formatters": [
    "codeframe",
    "summary"
  ],
  "hints": {
    "axe/aria": "error",
    "axe/color": "error",
    "axe/forms": "error",
    "axe/keyboard": "error",
    "axe/language": "error",
    "axe/name-role-value": "error",
    "axe/parsing": "error",
    "axe/semantics": "error",
    "axe/sensory-and-visual-cues": "error",
    "axe/structure": "error",
    "axe/tables": "error",
    "axe/text-alternatives": "error",
    "axe/time-and-media": "error",
    "button-type": "error",
    "compat-api/css": "error",
    "compat-api/html": "error",
    "create-element-svg": "error",
    "css-prefix-order": "error",
    "doctype": "error",
    "highest-available-document-mode": "error",
    "html-checker": [
      "error",
      {
        "details": true
      }
    ],
    "meta-charset-utf-8": "error",
    "meta-viewport": "error",
    "minified-js": "error",
    "no-bom": "error",
    "no-broken-links": [
      "error",
      {
        "method": "HEAD"
      }
    ],
    "no-p3p": "error",
    "no-protocol-relative-urls": "error",
    "no-vulnerable-javascript-libraries": [
      "error",
      {
        "severity": "medium"
      }
    ],
    "performance-budget": [
      "warning",
      {
        "connectionType": "3G_EM",
        "loadTime": 5
      }
    ],
    "scoped-svg-styles": "warning",
    "sri": [
      "warning",
      {
        "baseline": "sha512"
      }
    ]
  },
  "hintsTimeout": 120000,
  "ignoredUrls": [{
    "domain": "^.+[^braintree|paypal].+$",
    "hints": ["*"]
    }],
  "parsers": [
    "css",
    "javascript"
  ]
}
